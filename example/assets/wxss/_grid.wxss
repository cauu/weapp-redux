.flex-row {
  display: flex;
  /* width: 100%; */
}

.flex-col {
  flex-grow: 1;
  display: flex;
  width: 100%;
  /* max-width: 90%; */
}

/* Flex direction */
.flex-direction-col{
  flex-direction: column;
}

.flex-direction-row-rev {
  flex-direction: row-reverse;
}

.flex-direction-col-rev {
  flex-direction: column-reverse;
}

/* Vertically Align Columns */
/* .row-* vertically aligns every .col in the .row */
.row-vert-top {
  align-items: flex-start;
}
.row-vert-bottom {
  align-items: flex-end;
}
.row-vert-center {
  align-items: center;
}
.row-vert-stretch {
  align-items: stretch;
}
.row-vert-baseline {
  align-items: baseline;
}

/*  Horizentally Align Columns */
/* .row-* vertically aligns every .col in the .row */
.row-horz-start {
  justify-content: flex-start;
}

.row-horz-end {
  justify-content: flex-end;
}

.row-horz-around{
  justify-content: space-around;
}

.row-horz-center {
  justify-content: center;
}

.row-horz-between{
  justify-content: space-between;
}

.col-10 {
  flex: 0 0 10%;
  max-width: 10%;
}

.col-20 {
  flex: 0 0 20%;
  max-width: 20%;
}

.col-33, .col-34 {
  flex: 0 0 33.3333%;
  max-width: 33.3333%;
}

.col-50 {
  flex: 0 0 50%;
  max-width: 50%;
}

.col-66, col-67 {
  flex: 0 0 66.666%;
  max-width: 66.666%;
}

.col-75 {
  flex: 0 0 75%;
  max-width: 75%;
}

.col-80 {
  flex: 0 0 80%;
  max-width: 80%;
}

.col-90 {
  flex: 0 0 90%;
  max-width: 90%;
}

